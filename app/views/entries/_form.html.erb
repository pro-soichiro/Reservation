<%= form_with(model: entry,url: confirm_room_entries_path, local: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :room_id %>

  <div class="field">
    <%= current_user.name %>
  </div>

  <div class="field">
    <%= current_user.email %>
  </div>

  <div class="field">
    <%= form.label :予約日 %>
    <%= form.date_field :reserved_date %>
  </div>

  <div class="field">
    <%= form.label :予約時間 %>
    <%= form.text_field :usage_time %>
  </div>

  <div class="field">
    <%= form.label :予約人数 %>
    <%= form.number_field :people %>
  </div>

  <div class="actions">
    <%= form.submit '予約確認' %>
  </div>
<% end %>
