<p id="notice"><%= notice %></p>
<p>
  <strong>images:</strong>
  <% @room.images.each do |image| %>
    <%= image_tag image, class: "image" %>
  <% end %>
</p>
<p>
  <strong><%= Room.human_attribute_name('name') %>:</strong>
  <%= @room.name %>
</p>
<p>
  <strong><%= Room.human_attribute_name('place') %>:</strong>
  <%= @room.place %>
</p>
<p>
  <strong><%= Room.human_attribute_name('number') %>:</strong>
  <%= @room.number %>
</p>
  <% if current_user.admin %>
    <%= link_to t('button.edit'), edit_room_path(@room) %> |
  <% end %>
  <%= link_to t('button.back'), rooms_path %>
<p>
  <%= link_to t('message.register', model: Entry.model_name.human),
  new_room_entry_path(room_id: @room.id), class: "btn entry-btn" %>
</p>
<p>
  <strong><%= t('message.list', model: Entry.model_name.human ) %></strong>
  <%= render "entries/index" %>
</p>